@page
@model RzeczyDoOddania.Pages.SearchPageModel
@{
    ViewData["Title"] = "Wyszukiwanie";
}

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Items)
    {
        <div class="col">
            <div class="card" style="width: 18rem">
                <img src="@item.Image" class="card-img-top">
                <div class="card-body card-text">
                    <h5 class="card-title">@item.Name</h5>
                    <p>@item.Address</p>
                    <p>
                        @foreach(var category in item.Categories)
                        {
                            <span class="badge rounded-pill bg-warning">@category.Name</span>
                        }
                    </p>
                    <a asp-page="/ItemPage" asp-route-id="@item.Id" class="btn btn-primary nav-link text-light">Wy≈õwietl</a>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Wygasa: @Html.DisplayFor(modelitem => item.Date)</small>
                </div>
            </div>
        </div>
    }
</div>