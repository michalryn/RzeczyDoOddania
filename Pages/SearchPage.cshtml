            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Address</p>
                <p class="card-text"><small class="text-muted">Wygasa: @Html.DisplayFor(modelitem => item.Date)</small></p>
                <a asp-page="/ItemPage" asp-route-id="@item.Id" class="btn btn-primary nav-link text-light">Wyświetl</a>
